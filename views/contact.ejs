<% layout('/layouts/boilerplate') %>

<div class="container my-5 fade-in">
  <h1 class="text-center mb-4">Contact Us</h1>
  <p class="text-center">Weâ€™d love to hear from you! Fill out the form below and we'll get back to you soon.</p>

  <form class="signup-container" action="/contact" method="POST">
    <div class="mb-3">
      <label for="name">Your Name</label>
      <input type="text" name="name" id="name" required />
    </div>
