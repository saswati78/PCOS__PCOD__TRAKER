<% layout("/layouts/boilerplate") %>

<style>
  .tip-card {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    height: 250px;
    margin-bottom: 2rem;
    color: white;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tip-card:hover {
    transform: scale(1.02);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  .tip-card img {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    z-index: 1;
    filter: brightness(0.45);
  }

  .tip-card .content {
    position: relative;
    z-index: 2;
    padding: 2rem;
  }

  .tip-card .content h4 {
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .tip-card {
      height: auto;
    }

    .tip-card img {
      height: 300px;
    }

    .tip-card .content {
      padding: 1.5rem;
    }
  }
</style>

