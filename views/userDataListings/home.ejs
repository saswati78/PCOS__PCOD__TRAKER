<!-- Custom Styles for Better Visibility -->


<style>
  /* Full-page blurred background image */
  body {
    font-family: 'Segoe UI', sans-serif;
    color: #fff;
    margin: 0;
    padding: 0;
    position: relative;
    overflow-x: hidden;
    font-size: 1.1rem; /* base font size slightly increased */
  }

  /* Blurred background image */
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: url('/image/background.jpg') no-repeat center center fixed;
    background-size: cover;
    filter: blur(5px) brightness(0.6); /* more blur, slightly darker */
    z-index: -2;
  }

  /* Optional dark overlay */
  body::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: -1;
  }

  /* Headings */
  .highlight-heading,
  .section-heading {
    font-weight: 900;
    font-size: 3rem; /* larger */
    color: #fff;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.85);
    margin-bottom: 1rem;
  }

  /* Sub-headings and steps */
  .sub-heading,
  .step-heading {
    font-weight: 800;
    font-size: 1.7rem;
    color: #fff;
    text-shadow: 1.5px 1.5px 4px rgba(0, 0, 0, 0.85);
    margin-bottom: 0.5rem;
  }

  /* Paragraphs */
  p,
  .lead {
    font-size: 1.25rem; /* slightly bigger */
    font-weight: 600;
    color: #f0f0f0;
    line-height: 1.9;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.85);
  }

  /* Blockquote style */
  blockquote p {
    font-weight: 700;
    font-size: 1.2rem;
    color: #fdfdfd;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
  }

  /* Container spacing and layout */
  .container {
    padding: 2.5rem 1.5rem;
  }

  /* Button styles */
  .btn {
    font-weight: 600;
    font-size: 1.1rem;
    padding: 0.6rem 1.2rem;
  }

  /* Optional fade-in animation */
  .container {
    animation: fadeIn 1.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>




