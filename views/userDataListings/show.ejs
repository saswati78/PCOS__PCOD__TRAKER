<%- include('../layouts/header') %>

<div class="container mt-5">
  <h2>User Details: <%= user.username %></h2>
  <ul class="list-group mt-4">
    <li class="list-group-item"><strong>User ID:</strong> <%= user.user_id %></li>
    <li class="list-group-item"><strong>Age:</strong> <%= user.age %></li>
    <li class="list-group-item"><strong>Weight:</strong> <%= user.weight %> kg</li>
    <li class="list-group-item"><strong>Height:</strong> <%= user.height %> cm</li>
    <li class="list-group-item"><strong>BMI:</strong> <%= user.bmi %></li>
    <li class="list-group-item"><strong>Cycle Length:</strong> <%= user.cycle_length %> days</li>
    <li class="list-group-item"><strong>Irregular Periods:</strong> <%= user.irregular_periods ? "Yes" : "No" %></li>
    <li class="list-group-item"><strong>Acne:</strong> <%= user.acne ? "Yes" : "No" %></li>
    <li class="list-group-item"><strong>Hair Growth:</strong> <%= user.hair_growth ? "Yes" : "No" %></li>
    <li class="list-group-item"><strong>Skin Darkening:</strong> <%= user.skin_darkening ? "Yes" : "No" %></li>
    <li class="list-group-item"><strong>BP (Systolic/Diastolic):</strong> <%= user.bp_systolic %>/<%= user.bp_diastolic %></li>
    <li class="list-group-item"><strong>Hemoglobin Count:</strong> <%= user.hb_count %> g/dL</li>
    <li class="list-group-item"><strong>Stress Level:</strong> <%= user.stress_level %></li>
    <li class="list-group-item"><strong>Physical Activity:</strong> <%= user.physical_activity %></li>
    <li class="list-group-item"><strong>PCOS Prediction:</strong> <%= user.pcos_prediction %></li>
  </ul>
  <a href="/userData" class="btn btn-secondary mt-3">Back to Users</a>
</div>

<%- include('../layouts/footer') %>
