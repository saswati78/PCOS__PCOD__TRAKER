<% layout("/layouts/boilerplate", { hideFooter: true }) %>

<!-- Custom Styling for Sign Up Page -->
<style>
  
  /* Make page take full height and allow flexible layout */
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
  }

  body {
    font-family: 'Segoe UI', sans-serif;
    color: #fff;
    position: relative;
    overflow-x: hidden;
    flex: 1;
  }

  main {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Background image with blur and dim overlay */
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: url('/image/background.jpg') no-repeat center center fixed;
    background-size: cover;
    filter: blur(5px) brightness(0.6);
    z-index: -2;
  }
.signup-box {
  background-color: rgba(255, 255, 255, 0.1);
  padding: 2rem;
  border-radius: 16px;
  backdrop-filter: blur(6px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  width: 100%;
  max-width: 500px;

  transform: translateX(81%); /* Slight shift for large screens */
}

/* ‚úÖ Reset transform for mobile */
@media (max-width: 768px) {
  .signup-box {
    transform: none; /* no shift on smaller devices */
    margin: 0 auto;   /* center horizontally */
  }
}



  body::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: -1;
  }

  /* Main container */
  .container {
    padding-top: 4rem;
    padding-bottom: 4rem;
    flex: 1;
  }

  /* Headings */
  h2 {
    font-weight: 800;
    font-size: 3rem;
    color: #fff;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.85);
  }

  /* Labels and paragraphs */
  label,
  p {
    font-weight: 600;
    font-size: 1.3rem;
    color: #f0f0f0;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.85);
  }

  /* Form controls */
  .form-control {
    font-size: 1rem;
    font-weight: 500;
  }

  /* Submit button */
  .btn {
    font-weight: 600;
    font-size: 1.5rem;
    padding: 0.6rem;
  }

  /* Quote section for signup */
  .signup-quote {
    margin-top: 3rem;
    text-align: center;
    color: #eee;
    font-style: italic;
    font-size: 1.5rem;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
  }

  .quote-mark {
    font-size: 2rem;
    color: #ffc107;
  }
</style>


